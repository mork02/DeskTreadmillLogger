<UserControl x:Class="DeskTreadmillLogger.UserSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20">
        <TextBlock Text="Benutzer auswählen:" FontWeight="Bold"/>
        <ComboBox x:Name="UserComboBox" DisplayMemberPath="name" Height="30" Margin="0,5"/>
        <Button Content="Benutzer auswählen" Click="SelectUser_Click" Margin="0,10,0,0" Height="30"/>

        <TextBlock Text="Neuen Benutzer erstellen:" FontWeight="Bold" Margin="0,20,0,5"/>

        <TextBlock Text="Name"/>
        <TextBox x:Name="NameBox" Margin="0,5"/>

        <TextBlock Text="Gewicht (kg)"/>
        <TextBox x:Name="WeightBox" Margin="0,5"/>

        <TextBlock Text="Größe (cm)"/>
        <TextBox x:Name="HeightBox" Margin="0,5"/>

        <TextBlock Text="Geburtsdatum"/>
        <DatePicker x:Name="BirthDatePicker" Margin="0,5"/>

        <TextBlock Text="E-Mail"/>
        <TextBox x:Name="EmailBox" Margin="0,5"/>

        <Button Content="Erstellen" Click="CreateUser_Click" Margin="0,10,0,0" Height="30"/>
    </StackPanel>
</UserControl>
